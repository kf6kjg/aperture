{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "echo",
			"type": "shell",
			"command": "ls ${workspaceFolder}",
			"problemMatcher": []
		},
		{
			"label": "Get requirements (conan)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "conan install . -s build_type=Debug -s arch=x86_64 --build=missing",
			"problemMatcher": []
		},
		{
			"label": "Prepare build (CMake)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": [
				"Get requirements (conan)"
			],
			"windows": {
				"command": ".vscode/cmakebuild.bat"
			},
			"linux": {
				"command": ".vscode/cmakebuild.sh"
			},
			"problemMatcher": []
		},
		{
			"label": "Build project",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"Prepare build (CMake)"
			],
			"windows": {
				"command": "make #maybe... not sure ATM."
			},
			"linux": {
				"command": "make",
				"args": [
					"-j${nproc}"
				]
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["absolute"],
				"pattern": {
						"regexp": "^(.*):(\\d+):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"message": 3
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"windows": {
				"command": "rm",
				"args": [
					"/s",
					"/q",
					"build"
				]
			},
			"linux": {
				"command": "rm",
				"args": [
					"-rf",
					"--one-file-system",
					"build"
				]
			},
			"problemMatcher": []
		}
	]
}
